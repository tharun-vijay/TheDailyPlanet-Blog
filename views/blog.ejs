      <% allPosts.forEach(function(post) { %>
        <div>
          <h2><%= post.title %></h2>
          <p><em>By <%= post.author %> on <%= post.date %></em></p>
          <p><%= post.content %></p>
          <a href="/edit/<%= post.id %>" class="button mx-2">Edit</a>
          <a href="/<%= post.id %>" class="button">Delete</a>
        </div>
        <hr />
      <% }) %>
